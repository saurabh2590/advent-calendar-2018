{
  "compilerOptions": {
    "importHelpers": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "lib": [
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "types": ["src/types"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
